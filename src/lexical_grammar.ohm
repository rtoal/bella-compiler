num       = digit+ ("." digit+)?
let       = "let" ~idchar
func      = "func" ~idchar
print     = "print" ~idchar
while     = "while" ~idchar
true      = "true" ~idchar
false     = "false" ~idchar
keyword   = let | func | print | while | true | false
id        = ~keyword letter idchar*
idchar    = letter | digit | "_"
comment   = "//" (~"\n" any)*
space    += comment
